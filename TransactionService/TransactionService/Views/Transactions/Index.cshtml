@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "Index";
}

<h2>Transaction List</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Status</th>
        </tr>    
    </thead>    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Amount + @item.CurrencyCode</td>
                <td>@item.Date</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>

