@model TransactionsViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Transaction List</h2>
<div class="container-fluid">
    <div class="row">          
        <form asp-controller="Transactions" asp-action="Index" method="get" class="form-inline">
            <div class="form-group">
                <input type="checkbox" asp-for="CurrencyFlag" class="form-control" />
                <select asp-for="SelectedCurrency" asp-items="@Model.CurrencyList" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="DateFlag" class="form-control" />
                <input type="date" asp-for="SelectedDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="StatusFlag" class="form-control" />
                <select asp-for="SelectedStatus" asp-items="@Model.StatusList" class="form-control"></select>
            </div>
            
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
    <br />    
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.List)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Amount @item.CurrencyCode</td>
                        <td>@item.Date</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


